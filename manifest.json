{
  "manifest_version": 3,
  "name": "WordWise - Instant Dictionary",
  "version": "1.0",
  "description": "Get instant word definitions using Chrome's Built-in AI",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WordWise Settings"
  },
  "web_accessible_resources": [{
    "resources": ["fallback-dictionary.json"],
    "matches": ["<all_urls>"]
  }]
}